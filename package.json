{
  "private": true,
  "name": "cat-manhwa",
  "version": "1.0.0",
  "description": "Um gerenciador de manhwas com Electron.",
  "author": "BR",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "serve": "php artisan serve",
    "start": "concurrently \"npm:serve\" \"npm:dev\" \"wait-on http://127.0.0.1:8000 && electron .\"",
    "build:prod": "vite build",
    "build": "npm run build:prod && electron-builder"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.3",
    "@inertiajs/react": "^2.0.9",
    "axios": "^1.8.2",

    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.6",
    "@tailwindcss/vite": "^4.1.6",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "laravel-vite-plugin": "^1.2.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.6",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.seuapp.desktop",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "main.cjs",
      "preload.js",
      "public/**/*",
      "vendor/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
