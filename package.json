{
  "private": true,
  "main": "main.cjs",
  "scripts": {
    "dev": "vite",
    "serve": "php artisan serve",
    "start": "concurrently \"npm:serve\" \"npm:dev\" \"wait-on http://127.0.0.1:8000 && electron .\"",
    "build:prod": "vite build",
    "build": "npm run build:prod && electron-builder"
  },
  "dependencies": {
    "axios": "^1.8.2",
    "@inertiajs/react": "^2.0.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "concurrently": "^9.1.2",
    "wait-on": "^8.0.3",
    "@vitejs/plugin-react": "^4.2.0"
  },
  "build": {
    "appId": "com.seuapp.desktop",
    "directories": { "output": "dist_electron" },
    "files": ["main.cjs","preload.js","public/**/*","vendor/**/*"],
    "win": { "target": "nsis" },
    "mac": { "target": "dmg" },
    "linux": { "target": "AppImage" }
  }
}
